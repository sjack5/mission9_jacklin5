@{
}
@model Book

    <body class="bg-dark">
        <div class="card card-outline-primary m-1 p-1">
            <div class="bg-faded p-1">
                <h4>
                    @Model.Title
                    <span class="badge badge-pill badge-primary bg-dark" style="float:right">
                        <small>@Model.Price.ToString("c")</small>
                    </span>
                </h4>
            </div>
            <div class="card-text p-1">@Model.Category</div>


            <ul>
                <li>Author: @Model.Author</li>
                <li>Publisher: @Model.Publisher</li>            @*Lists information for each page, pulls from our queryable model*@
                <li>ISBN: @Model.ISBN</li>
                <li>Classification: @Model.Classification</li>
                <li>PageCount: @Model.PageCount</li>
                <li>Price: $@Model.Price</li>
            </ul>

            <form method="post" asp-page="/Shop">

                <input type="hidden" asp-for="@Model.BookId" />
                <input type="hidden" name="returnURL" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

                <span class="card-text">
                    <button type="submit" class="btn btn-danger btn-sm float-end">Purchase</button>
                </span>
            </form>
        </div>
    </body>

