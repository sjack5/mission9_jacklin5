}

@model IEnumerable<string>
    
        <div class="d-grid gap-2">          @*Shows all the potential categories from information we got in typeviewcontroller*@

            <a asp-controller="Home" asp-acton="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary btn-light text-black">Home</a>
            @foreach (string t in Model)
            {
                <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@t" asp-route-pageNum="1"
                   class="btn @(ViewBag.SelectedCategory == t ? "btn-danger" : "btn-outline-secondary btn-light text-black")">@t</a>
            }
        </div>
